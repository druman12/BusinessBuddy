<!-- res/layout/activity_sales_history.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back_support">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sales History"
        android:textColor="@color/back_color"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="20dp" />

    <ListView
        android:id="@+id/lv_sales_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_sale_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/lightgray"
        android:backgroundTint="@color/back_color"/>
</LinearLayout>
